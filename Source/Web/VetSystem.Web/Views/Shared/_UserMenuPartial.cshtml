@using VetSystem.Web.ViewModels.Users

<li class="dropdown">
    <a href="#" class="dropdown-toggle" data-toggle="dropdown">
        Pets <span class="caret"></span>
    </a>
    <ul class="dropdown-menu">

        @if (this.ViewBag.PetsMenu.Count != 0)
        {
            foreach (PetForMenuViewModel pet in this.ViewBag.PetsMenu)
            {
                <li>
                   @Html.ActionLink(pet.Name, "Details", "Pets", null, null, null, new { area = "Pets", id = pet.Id }, null)
                </li>
            }
            <li class="divider"></li>
            <li>
                @Html.ActionLink("All", "Index", "Pets", new { area = "Pets" }, null)
            </li>
        }
        else
        {
            <li>
                No Pets
            </li>
        }
        <li class="divider"></li>
        <li>
            @Html.ActionLink("Add Pet", "Create", "Pets", new { area = "Pets" }, null)
        </li>
    </ul>
</li>