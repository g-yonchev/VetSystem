@using VetSystem.Web.ViewModels.Users
<li class="dropdown">
    <a href="#" class="dropdown-toggle" data-toggle="dropdown">
        Pets <span class="caret"></span>
    </a>
    <ul class="dropdown-menu">

        @if (this.ViewBag.PetsMenu != null)
        {
            foreach (PetForMenuViewModel pet in this.ViewBag.PetsMenu)
            {
                <li>
                   @Html.ActionLink(pet.Name, "Details", "Pets", null, null, null, new { area = "Pets", id = pet.Id }, null)
                </li>
            }
        }
        <li>
            @Html.ActionLink("My Pets", "Index", "Pets", new { area = "Pets" }, null)
        </li>
        <li>
            @Html.ActionLink("Add Pet", "Create", "Pets", new { area = "private" }, null)
        </li>
    </ul>
</li>

<li>
    @Html.ActionLink("Clinics", "Index", "Clinics", new { area = "VetClinics" }, null)
</li>
